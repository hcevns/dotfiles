        "title": "Microsoft Remote Desktop",
        "rules": [
          {
            "description": "ยง -> Keypad + (SITS)",
            "manipulators": [
              {
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "^com\\.microsoft\\.rdc\\.macos$",
                      "^com\\.vmware\\.horizon$"
                    ],
                    "type": "frontmost_application_if"
                  }
                ],
                "from": {
                  "key_code": "non_us_backslash"
                },
                "to": {
                  "key_code": "keypad_plus"
                },
                "type": "basic"
              }
            ]
          },
